<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0" id="cordova-plugin-android-no-tablet" version="0.0.1">
    <name>Cordova Android No Tablet</name>
    <description>This plugin sets compatible-screen values to prevent Android tablet compatibility</description>
    <license>MIT</license>
    <engines>
        <engine name="cordova" version=">=6.1.0" />
    </engines>
    <!-- android -->
    <platform name="android">
        <edit-config file="AndroidManifest.xml" target="/manifest/supports-screens" mode="merge">
            <supports-screens 
                android:smallScreens="true"
                android:normalScreens="true" 
                android:largeScreens="false"
                android:xlargeScreens="false"
                android:resizeable="false" />
        </edit-config>
    </platform>
</plugin>
